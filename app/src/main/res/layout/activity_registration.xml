<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.activity.devibar.hitch.RegistrationActivity"
    android:background="#2c3e50">

    <ImageView
        android:layout_width="40dp"
        app:srcCompat="@drawable/username"
        android:id="@+id/username"
        android:layout_height="35dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp" />

    <EditText
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etUsername"
        android:singleLine="true"
        android:textSize="12sp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/username"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <ImageView
        android:layout_width="40dp"
        app:srcCompat="@drawable/email"
        android:id="@+id/email"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/username"
        android:layout_height="35dp" />

    <EditText
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/etEmail"
        android:textSize="12sp"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etUsername"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/email"
        android:layout_marginLeft="24dp"
        android:hint="Email Address"
        android:textColor="@android:color/white"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
        app:layout_constraintHorizontal_bias="0.44"
        android:textColorHint="@android:color/white" />

    <ImageView
        android:layout_width="40dp"
        app:srcCompat="@drawable/password"
        android:id="@+id/password"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_height="35dp" />

    <EditText
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etEmail"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColor="@android:color/white"
        android:layout_width="120dp"
        app:layout_constraintLeft_toLeftOf="@+id/etEmail"
        android:textColorHint="@android:color/white" />

    <EditText
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etConfirmPassword"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etEmail"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:textColor="@android:color/white"
        android:layout_width="120dp"
        app:layout_constraintRight_toRightOf="@+id/etEmail"
        android:textColorHint="@android:color/white" />

    <ImageView
        android:layout_width="40dp"
        app:srcCompat="@drawable/card"
        android:id="@+id/card"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_height="35dp" />

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etCardNumber"
        android:textSize="12sp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/card"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etPassword"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:hint="Card Number"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <TextView
        android:text="Personal Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/personaldetails"
        android:textSize="25sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/card"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:textColor="@android:color/white" />

    <EditText
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etLastName"
        android:textSize="12sp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toBottomOf="@+id/personaldetails"
        android:layout_marginTop="16dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <EditText
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText7"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/personaldetails"
        app:layout_constraintRight_toRightOf="@+id/etCardNumber"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:textColor="@android:color/white"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/etLastName"
        android:layout_marginLeft="16dp"
        android:textColorHint="@android:color/white" />

    <EditText
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etAddress"
        android:textSize="12sp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etLastName"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:layout_width="320dp"
        app:layout_constraintRight_toRightOf="@+id/etBirthDate"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <RadioButton
        android:text="Female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rdFemale"
        android:checked="false"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etAddress"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:textColor="@android:color/white"
        android:duplicateParentState="false" />

    <RadioButton
        android:text="Male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rdMale"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etAddress"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/rdFemale"
        android:layout_marginLeft="24dp"
        android:textColor="@android:color/white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/etBirthDate"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etAddress"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:textColor="@android:color/white"
        android:hint="Birth Date"
        android:textColorHint="@android:color/white" />

    <Button
        android:text="Upload Documents"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnUpload"
        android:textSize="10sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/rdMale" />
</android.support.constraint.ConstraintLayout>
